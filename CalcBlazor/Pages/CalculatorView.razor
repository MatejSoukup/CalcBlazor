@using CalcBlazor.Components
@page "/calculator"

@inherits Data.CalculatorBase
<h3>@displayText</h3>
@for (int i = 0; i < 10; i++)
{
	<CalculatorButton Text="@i.ToString()" OnNumberClick="AddNumber"></CalculatorButton>
}

<CalculatorButton Text="," OnNumberClick="AddNumber"></CalculatorButton>

<CalculatorButton Text="+" OnNumberClick="SetMathOperator"></CalculatorButton>
<CalculatorButton Text="-" OnNumberClick="SetMathOperator"></CalculatorButton>
<CalculatorButton Text="*" OnNumberClick="SetMathOperator"></CalculatorButton>
<CalculatorButton Text="/" OnNumberClick="SetMathOperator"></CalculatorButton>

<CalculatorButton Text="=" OnNumberClick="Calculate"></CalculatorButton>

<CalculatorButton Text="C" OnNumberClick="ResetOperation"></CalculatorButton>

<CalculatorButton Text="Celá čísla" OnNumberClick="WholeNumbers"></CalculatorButton>

<div>History</div>
@for (int i = History.Count - 1; i >= 0; i--)
        {
            <div>
                @History[i].ToString()
            </div>
        }